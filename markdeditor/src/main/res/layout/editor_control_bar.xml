<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/editor_control_bg"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/container1"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/normalTextBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:text="T"
            android:textSize="24sp"
            android:textStyle="bold" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/container2"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/container1">

        <TextView
            android:id="@+id/headingBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:fontFamily="serif-monospace"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:text="H"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/headingNumberBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/headingBtn"
            android:layout_marginStart="-2dp"
            android:layout_toEndOf="@+id/headingBtn"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:fontFamily="serif-monospace"
            android:text="1"
            android:textSize="12sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container3"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/container2"
        android:padding="8dp">

        <ImageView
            android:id="@+id/bulletBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@drawable/ul" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/container4"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/container3"
        android:padding="8dp">

        <ImageView
            android:id="@+id/blockquoteBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@drawable/quote" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container5"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/container4"
        android:padding="8dp">

        <ImageView
            android:id="@+id/insertLinkBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@drawable/link" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container6"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/container5"
        android:padding="8dp">

        <ImageView
            android:id="@+id/insertHrBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@drawable/hr" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container7"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:padding="8dp">

        <ImageView
            android:id="@+id/insertImageBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@drawable/image" />
    </FrameLayout>

</RelativeLayout>